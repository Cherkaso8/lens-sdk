{
  "name": "@lens-social/sdk",
  "version": "0.0.0",
  "description": "The quickest way to build on top of Lens Social.",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.1.2"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo watch build",
    "clean": "rimraf packages/*/dist",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "new:lib": "NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts",
    "test:client": "vitest --project @lens-social/client",
    "test:react": "vitest --project @lens-social/react",
    "test:storage": "vitest --project @lens-social/storage",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.7.8",
    "jest-extended": "^4.0.2",
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "turbo": "^2.2.3",
    "vite": "^5.4.9",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228"
}
